package com.fds.FoodDelivery.controller;

import java.util.Date;

import org.springframework.web.bind.annotation.CrossOrigin;
import org.springframework.web.bind.annotation.PostMapping;
import org.springframework.web.bind.annotation.RequestMapping;
import org.springframework.web.bind.annotation.RequestParam;
import org.springframework.web.bind.annotation.RestController;

import com.fds.FoodDelivery.model.Response;
import com.fds.FoodDelivery.model.User;
import com.fds.FoodDelivery.repository.UserRepository;

@RestController
@CrossOrigin(origins = "http://localhost:4200")
@RequestMapping("/customers")
public class UserController {

	public static String TAG = "[User]";
	UserRepository userRepo;
	Date date = new Date();


	@PostMapping(path="/add")
	public Response addUser(@RequestParam String firstName ,  @RequestParam String lastName ,@RequestParam String email, @RequestParam String password, @RequestParam String role, @RequestParam String phone,  @RequestParam String address, @RequestParam String city,@RequestParam String state,@RequestParam String zip) {
		User  data = new User(firstName, lastName, email,password,role, phone, address, city,state, zip);
		userRepo.save(data);
		return new Response(101, TAG+" "+data+" Added Successful on "+date, null);
	}
	

}
